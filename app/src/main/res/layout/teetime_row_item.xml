<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="10dp" android:focusable="true">

    <TextView
        android:id="@+id/booking_dispo_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/booking_time_view"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/booking_time_view"
        android:text="@string/booking_dipo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/booking_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/booking_dispo_view"
        android:layout_marginTop="5dp"
        android:text="@string/booking_time"
        android:textAlignment="center"
        android:textColor="@color/greenAlbaColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/booking_price_view"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/booking_dispo_view"
        android:layout_toRightOf="@+id/booking_dispo_view"
        android:text="@string/booking_price"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/booking_button"
        style="@style/AppTheme.PlayersButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_reserver"
        android:clickable="false"
        android:text="@string/booking_reserver"
        android:textColor="#DF521C"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/booking_etiquette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/booking_button"
        android:layout_toStartOf="@+id/booking_button"
        android:adjustViewBounds="true"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/etiquette" />

    <TextView
        android:id="@+id/booking_reduc_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/booking_etiquette"
        android:layout_alignRight="@+id/booking_etiquette"
        android:layout_alignTop="@+id/booking_price_view"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:rotation="-20"
        android:text="-10 %"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

</RelativeLayout>